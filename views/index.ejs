<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogs content" style="text-align: center;">
    <h2>Your Resume</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/blogs/<%= blog._id %>">
          <h3 class="title"><%= blog.fName %> <%= blog.lName %>'s Resume</h3>
          <p class="snippet"><%= blog.position %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no resume to display...</p>
    <% } %>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>